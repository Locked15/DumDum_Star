@using DumDum_Star.Models.Entities
@model CyberWare
@{
    ViewBag.Title = "Создание товаров — DumDum-Star";
}

<script src="~/content/js/order-creation.js" ></script>
<link rel="stylesheet" href="~/content/css/order-creation.css" />

<div class="order_creation-base">
    <h1>Новый Имплант</h1>
    <div class="order_creation-info">
        <div class="order_creation-content">
            <img id="cyberImage" src="~/images/light/missing.png" alt="Имплант." onerror="onErrorLoad()" />

            <form class="order_creation-form" asp-action="CreateCyberWare">
                <label for="Name">* Название</label>
                <input name="Name" value="@Model.Name" type="text" />

                <label for="Price">* Стоимость</label>
                <input name="Price" value="@Model.Price" asp-for="Price" type="number" min="1" step="any"/>

                <label>Производитель</label>
                @Html.DropDownListFor(model => model.ManufacturerId, new SelectList(ViewBag.Manufacturers, "Id", "Name"), "Оставить пустым, если производитель неизвестен...")

                <label>Тип Импланта</label>
                @Html.DropDownListFor(model => model.TypeId, new SelectList(ViewBag.Types, "Id", "Type"), "Оставить пустым, если тип неизвестен...")

                <label>Целевая Область</label>
                @Html.DropDownListFor(model => model.TargetId, new SelectList(ViewBag.Targets, "Id", "Name"), "Оставить пустым, если область нестандартная...")

                <label for="LoadLevel">Нагрузка</label>
                <input name="LoadLevel" value="@Model.LoadLevel" asp-for="LoadLevel" type="number" min="0" max="1.0" step="0.01"/>

                <label for="Quantity">* Количество</label>
                <input name="Quantity" value="@Model.Quantity" type="number" min="0" max="1024" />

                <label for="Image">Изображение</label>
                <input id="cyberImageInput" name="Image" type="url" onchange="newUrlInputted()" />

                <label for="Description">Описание</label>
                <input id="cyberDescription" name="Description" type="text" maxlength="128" />

                <input type="submit" value="Сохранить"/>
            </form>
        </div>

        <span>Обязательные поля отмечены '*'.</span>
    </div>
</div>
