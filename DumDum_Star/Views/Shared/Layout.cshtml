<!DOCTYPE html>

@using DumDum_Star.Models

<html>
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>

        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Jost:ital,wght@0,400;0,700;1,100&display=swap" rel="stylesheet">

        <link rel="stylesheet" href="~/content/css/header.css" />
        <link rel="stylesheet" href="~/content/css/footer.css" />
        <script type="text/javascript" src="~/content/js/base.js"></script>
    </head>

    <body>
        <header class="header-base">
            <div class="header-nav">
                <div>
                    <a asp-controller="Home" asp-action="Index">
                        <img id="header-icon" src="~/icons/light/header/secondary-small.svg" alt="Time to chippin' IN!" 
                             onload="setTitleForIcon()"/>
                    </a>
                </div>

                <div>
                    <a class="user-string" asp-controller="User" asp-action="Account">@SessionData.GetHeaderText()</a>

                    <a asp-controller="User" asp-action="Account">
                        <img src="~/icons/light/header/basket/basket.png" alt="Your basket." />
                    </a>
                </div>
            </div>
        </header>

        <main>
            @RenderBody()
        </main>

        <footer class="footer-base">
            <div class="left-part">
                <a href="#" onclick="scrollToTheTop()" title="Вернуться наверх.">Наверх</a>
                <a asp-controller="Home" asp-action="AboutUs" title="Узнайте больше о нас! Хе-хе...">Информация</a>
                <a asp-controller="Home" asp-action="Locations" title="Узнайте о местах, где нас можно найти. (АГА!)">Локации</a>
                <a asp-controller="Home" asp-action="Error" title="Попробуй. Узнаешь, что будет.">Прочее</a>
            </div>
            <div class="right-part">
                <span>DumDum-Star</span>
            </div>
        </footer>
    </body>
</html>
